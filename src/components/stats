	completedTodos = $todoListStore
			.map((todo) => todo.completed)
			.filter((c) => c).length;
		progress.set(
			$todoListStore.length > 0
				? Math.trunc((completedTodos / $todoListStore.length) * 100) || 0
				: 100
		);